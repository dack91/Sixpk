<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!-- Need to replace textview/seekbar pairs with a dynamic listview of pairs for each
    workout completed in the exercise-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crunches:"
        android:id="@+id/textView" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Side Plank:"
        android:id="@+id/textView2" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Workout Comment here"
        android:id="@+id/textView3"
        android:singleLine="true"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="@string/saveWorkoutButton"
        android:id="@+id/buttonSaveWorkout"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:onClick="onSaveClicked"
        android:layout_gravity="bottom"/>
    <Button
        android:id="@+id/deleteWorkoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginRight="5dp"
        android:onClick="onDeleteCLicked"
        android:text="@string/deleteWorkoutButton" />
</LinearLayout>