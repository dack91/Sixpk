<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context="edu.dartmouth.cs.codeit.sixpk.HistoryFragment">

    <!-- NEED TO change to a listview layout like historyFragment in myruns to display all
    completed workouts. Add button to go to statisticsActivity??-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:orientation="vertical">
        <TextView
            android:id="@+id/sampleWorkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/sampleWorkout"
            android:onClick="onSampleClicked"/>
        <TextView
            android:id="@+id/sampleWorkout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/sampleWorkout"
            android:onClick="onSampleClicked"/>
        <TextView
            android:id="@+id/sampleWorkout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/sampleWorkout"
            android:onClick="onSampleClicked"/>
    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_marginBottom="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="@string/showStatsButtonText"
        android:id="@+id/buttonShowStats"
        android:layout_gravity="center_horizontal|bottom" />

</FrameLayout>
